#include <iostream> 
using namespace std; 
int main() 
{ 
string a = "£"; 
int F, S, P; 
cout << "Введите Фунты, Шиллинги, Пенсы:"; 
cin >> F >> S >> P; 
F = F*240; 
S = S*12; 
float Sum = F+S+P; 
cout << a << Sum/240 << endl; 
}



