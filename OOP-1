#include <iostream> 
using namespace std; 
int main() 
{ 
int a,b,c,d; 
cout << "Введите соответственно a,b,c,d : " << endl; 
cin >> a >> b >> c >> d; 
cout << (a*d + c*b) << "/" << b*d << endl; 
return 0; 
}



