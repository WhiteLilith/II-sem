6)
#include <iostream> 
using namespace std; 
int main() { 
float d, m, y, c, f; 
cout << "Введите сумму в долларах: "; 
cin >> d; 
cout << "\n"; 
c = d/1.487; 
f = d/0.172; 
m = d/0.584; 
y = d/0.00955; 
cout << "Сумма в стерлингах: " << c << "\nСумма во франках: " << f << "\nСумма в марках: " << m << "\nСумма в йенах: " << y; 
}



