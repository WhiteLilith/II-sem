#include <iostream>
using namespace std;
struct date
{ int d, m, y;
};
int main() {
  date n1;
  char a;
cout << "Введите дату в формате день/месяц/год: ";
cin >> n1.d >> a >> n1.m >> a >> n1.y;
if (n1.d < 10)
cout << "Дата: " << "0" << n1.d << a;
else
cout << "Дата: " << n1.d << a;
if (n1.m < 10)
cout << "0" << n1.m << a << n1.y;
else 
cout << n1.m << a << n1.y;
}




